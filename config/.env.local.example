# Configuración de desarrollo - Copiar a .env.local
# Este archivo es un ejemplo. No incluir datos reales en el repositorio.

# Configuración básica de Django
SECRET_KEY=django-insecure-development-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de datos (SQLite para desarrollo)
# No necesita variables adicionales ya que usa SQLite por defecto en settings.py

# Configuración CORS para frontend local
# Separar múltiples dominios con comas sin espacios
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Configuración adicional (opcional)
