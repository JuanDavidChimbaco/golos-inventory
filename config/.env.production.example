# Configuración de producción - Copiar a .env.production
# Este archivo es un ejemplo. No incluir datos reales en el repositorio.

# Configuración básica de Django
# Generar clave segura con: python manage.py generate-secret-key
SECRET_KEY=genera-una-clave-segura-aqui
DEBUG=False
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# Base de datos PostgreSQL (recomendado para producción)
DB_NAME=golos_inventory
DB_USER=postgres
DB_PASSWORD=password_seguro
DB_HOST=localhost
DB_PORT=5432

# Configuración CORS para producción
# Solo dominios HTTPS en producción
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# Configuración email (opcional, para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=tu-email@gmail.com

# Configuración adicional de seguridad
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Control de margen online (tienda)
STORE_MARGIN_GUARD_ENABLED=True
STORE_MARGIN_MIN_PERCENT=20
STORE_MARGIN_WOMPI_PERCENT=2.65
STORE_MARGIN_WOMPI_FIXED_FEE=700
STORE_MARGIN_WOMPI_VAT_PERCENT=19
STORE_MARGIN_PACKAGING_COST=1500
STORE_MARGIN_RISK_PERCENT=1
STORE_MARGIN_DEFAULT_WEIGHT_PER_ITEM_GRAMS=900
STORE_MARGIN_DEFAULT_SHIPPING_COST=12000
STORE_MARGIN_SHIPPING_COST_MATRIX=local:2000:9000,local:5000:13000,regional:2000:12000,regional:5000:17000,national:2000:16000,national:5000:23000
